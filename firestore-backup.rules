// Temporary permissive Firestore Rules untuk testing dan inisialisasi
// PENTING: Ganti dengan rules yang lebih ketat setelah testing selesai
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read/write untuk testing
    // CATATAN: Ini tidak aman untuk production!
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Atau gunakan rules yang sedikit lebih ketat:
    // match /{document=**} {
    //   allow read: if true;
    //   allow write: if request.auth != null;
    // }
  }
}
