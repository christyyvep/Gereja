rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images folder - allow authenticated users to read, moderators to write
    match /images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                   get(/databases/default/documents/jemaat/$(request.auth.uid)).data.role in ['moderator', 'admin', 'super_admin'];
    }
    
    // Thumbnails folder - allow authenticated users to read, moderators to write
    match /thumbnails/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                   get(/databases/default/documents/jemaat/$(request.auth.uid)).data.role in ['moderator', 'admin', 'super_admin'];
    }
    
    // Profile images - users can manage their own, admins can manage all
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                   (request.auth.uid == userId || 
                    get(/databases/default/documents/jemaat/$(request.auth.uid)).data.role in ['admin', 'super_admin']);
    }
    
    // Admin only folders
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null && 
                         get(/databases/default/documents/jemaat/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
